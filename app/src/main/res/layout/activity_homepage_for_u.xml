<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.HomepageForUActivity"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0fffffff">

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/homepage_title"
            android:textSize="18dp" />

        <view
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#3fffffff" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@id/tab_menu"
        android:layout_below="@id/tab_title"></FrameLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="#0fffffff">

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/tab_menu_order"
            android:textColor="@drawable/tab_menu_order_text"
            android:background="@drawable/tab_menu_bg"
            android:text="@string/homepage_txt_order" />
        <TextView
            android:id="@+id/txt_shopping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/tab_menu_shopping"
            android:textColor="@drawable/tab_menu_shopping_text"
            android:background="@drawable/tab_menu_bg"
            android:text="@string/homepage_txt_order" />
        <TextView
            android:id="@+id/txt_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="-5dp"
            android:drawableTop="@drawable/tab_menu_mine"
            android:textColor="@drawable/tab_menu_mine_text"
            android:background="@drawable/tab_menu_bg"
            android:text="@string/homepage_my" />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#3fffffff"
        android:layout_above="@id/tab_menu" />

</RelativeLayout>