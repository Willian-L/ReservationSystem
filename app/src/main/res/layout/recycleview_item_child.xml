<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:id="@+id/menu_one"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="#50000000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/menu_oneTxt"
                style="@style/menu_top"
                android:text="1" />

            <LinearLayout
                android:id="@+id/one_content"
                android:layout_toRightOf="@+id/menu_oneTxt"
                style="@style/menu_content">

                <TextView
                    android:id="@+id/one_Dishes_one"
                    android:text="TextView"
                    style="@style/menu_item" />

                <TextView
                    android:id="@+id/one_Dishes_two"
                    style="@style/menu_item"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/one_Dishes_three"
                    style="@style/menu_item"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/one_Dishes_four"
                    style="@style/menu_item"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/one_Soup"
                    style="@style/menu_item"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                style="@style/menu_End"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout style="@style/menu_End_top">

                    <TextView
                        android:id="@+id/menu_one_count"
                        style="@style/menu_End_count"
                        android:text="00" />

                    <TextView
                        style="@style/menu_End_countTxt"
                        android:text="-people" />
                </LinearLayout>

                <TextView
                    android:id="@+id/one_detail"
                    style="@style/menu_End_bottom"
                    android:text="DETAIL" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_two"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignTop="@+id/menu_one"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:background="#50000000"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
         >
        <View
            android:id="@+id/parent_dashed_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#10000000"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/menu_twoTxt"
                style="@style/menu_top"
                android:text="2" />

            <LinearLayout
                android:id="@+id/two_content"
                style="@style/menu_content"
                android:layout_toRightOf="@+id/menu_twoTxt">

                <TextView
                    android:id="@+id/two_Dishes_one"
                    style="@style/menu_item"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/two_Dishes_two"
                    style="@style/menu_item"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/two_Dishes_three"
                    style="@style/menu_item"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/two_Dishes_four"
                    style="@style/menu_item"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/two_Soup"
                    style="@style/menu_item"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                style="@style/menu_End"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    style="@style/menu_End_top">

                    <TextView
                        android:id="@+id/menu_two_count"
                        style="@style/menu_End_count"
                        android:text="00" />

                    <TextView
                        android:text="-people"
                        style="@style/menu_End_countTxt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/two_detail"
                    style="@style/menu_End_bottom"
                    android:text="DETAIL" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>