<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:id="@+id/menu_one"
        style="@style/menu_layout"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/menu_oneTxt"
                style="@style/menu_top"
                android:text="1" />

            <View
                android:id="@+id/view_one"
                style="@style/view_show_menu"
                android:layout_toRightOf="@+id/menu_oneTxt" />

            <LinearLayout
                android:layout_toEndOf="@+id/view_one"
                android:layout_toStartOf="@+id/menu_end_one"
                style="@style/menu_content_layout">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <TextView
                        android:text="D"
                        style="@style/menu_content_text" />

                    <LinearLayout
                        android:id="@+id/one_content"
                        style="@style/menu_content">

                        <TextView
                            android:id="@+id/one_Dishes_one"
                            style="@style/menu_item" />

                        <TextView
                            android:id="@+id/one_Dishes_two"
                            style="@style/menu_item" />

                        <TextView
                            android:id="@+id/one_Dishes_three"
                            style="@style/menu_item" />

                        <TextView
                            android:id="@+id/one_Dishes_four"
                            style="@style/menu_item" />

                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/menu_content_text"
                            android:text="S"/>

                    <TextView
                        android:id="@+id/one_Soup"
                        style="@style/menu_item" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_end_one"
                style="@style/menu_End"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout style="@style/menu_End_top">

                    <TextView
                        android:id="@+id/menu_one_count"
                        style="@style/menu_End_count"
                        android:text="00" />

                    <TextView
                        style="@style/menu_End_countTxt"
                        android:text="-people" />
                </LinearLayout>

                <TextView
                    android:id="@+id/one_detail"
                    style="@style/menu_End_bottom"
                    android:text="DETAIL" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_two"
        style="@style/menu_layout"
        android:layout_alignTop="@+id/menu_one"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="5dp">

        <View
            android:id="@+id/parent_dashed_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#10000000"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/menu_twoTxt"
                style="@style/menu_top"
                android:text="2" />

            <View
                android:id="@+id/view_two"
                style="@style/view_show_menu"
                android:layout_toRightOf="@+id/menu_twoTxt" />

            <LinearLayout
                android:layout_toEndOf="@+id/view_two"
                android:layout_toStartOf="@+id/menu_end_two"
                style="@style/menu_content_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <TextView
                    android:text="D"
                    style="@style/menu_content_text" />

                <LinearLayout
                    android:id="@+id/two_content"
                    style="@style/menu_content"
                    android:gravity="top|left">

                    <TextView
                        android:id="@+id/two_Dishes_one"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/two_Dishes_two"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/two_Dishes_three"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/two_Dishes_four"
                        style="@style/menu_item" />

                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/menu_content_text"
                        android:text="S"/>

                    <TextView
                        android:id="@+id/two_Soup"
                        style="@style/menu_item" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_end_two"
                style="@style/menu_End"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout style="@style/menu_End_top">

                    <TextView
                        android:id="@+id/menu_two_count"
                        style="@style/menu_End_count"
                        android:text="00" />

                    <TextView
                        style="@style/menu_End_countTxt"
                        android:text="-people" />
                </LinearLayout>

                <TextView
                    android:id="@+id/two_detail"
                    style="@style/menu_End_bottom"
                    android:text="DETAIL" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>