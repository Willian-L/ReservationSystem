<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.UserHomepage.Fragment.DetailedMenuFragment">

    <RelativeLayout style="@style/Fragment_rel_title">

        <TextView
            style="@style/Fragment_txt_title"
            android:text="Detailed Menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/menu_test_date"
            android:textSize="25dp" />

        <LinearLayout
            style="@style/relese_menu_layout"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_indent_menu">

            <TextView
                style="@style/release_menu_title"
                android:text="MENU" />

            <View style="@style/release_menu_view_title" />

            <LinearLayout style="@style/release_menu_dishes_layout">

                <TextView
                    style="@style/relese_menu_dishes_top"
                    android:text="DISHES" />

                <View style="@style/relese_menu_dishes_view" />


                <LinearLayout style="@style/release_menu_content_layout">

                    <LinearLayout style="@style/relese_menu_content_item">

                        <TextView
                            style="@style/relese_menu_content_item_text"
                            android:text="①" />

                        <TextView
                            android:id="@+id/detail_dish_1"
                            style="@style/relese_menu_content_item_text" />
                    </LinearLayout>


                    <LinearLayout style="@style/relese_menu_content_item">

                        <TextView
                            style="@style/relese_menu_content_item_text"
                            android:text="②" />

                        <TextView
                            android:id="@+id/detail_dish_2"
                            style="@style/relese_menu_content_item_text" />
                    </LinearLayout>

                    <LinearLayout style="@style/relese_menu_content_item">

                        <TextView
                            style="@style/relese_menu_content_item_text"
                            android:text="③" />

                        <TextView
                            android:id="@+id/detail_dish_3"
                            style="@style/relese_menu_content_item_text" />
                    </LinearLayout>

                    <LinearLayout style="@style/relese_menu_content_item">

                        <TextView
                            style="@style/relese_menu_content_item_text"
                            android:text="④" />

                        <TextView
                            android:id="@+id/detail_dish_4"
                            style="@style/relese_menu_content_item_text" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/release_menu_soup_layout"
                android:visibility="gone">

                <TextView
                    style="@style/relese_menu_dishes_top"
                    android:text="SOUP" />

                <View style="@style/relese_menu_dishes_view" />

                <LinearLayout style="@style/relese_menu_soup_content_layout">

                    <TextView
                        android:id="@+id/detail_soup"
                        style="@style/relese_menu_content_item_text" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">

            <Button
                android:id="@+id/edit_detail_menu"
                style="@style/ButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_edit"
                android:text="edit" />

            <View
                android:layout_width="30dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/delete_detail_menu"
                style="@style/ButtonStyle"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_delete"
                android:text="delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>