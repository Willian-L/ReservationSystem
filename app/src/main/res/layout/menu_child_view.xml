<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_view"
    style="@style/menu_layout"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#10000000"
        android:layerType="software" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/menu_twoTxt"
            style="@style/menu_top"
            android:text="2" />

        <View
            android:id="@+id/view_two"
            style="@style/view_show_menu"
            android:layout_toRightOf="@+id/menu_twoTxt" />

        <LinearLayout
            style="@style/menu_content_layout"
            android:layout_toStartOf="@+id/menu_end_two"
            android:layout_toEndOf="@+id/view_two">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/menu_content_text"
                    android:text="D" />

                <LinearLayout
                    android:id="@+id/view_content"
                    style="@style/menu_content"
                    android:gravity="top|left">

                    <TextView
                        android:id="@+id/view_Dishes_one"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/view_Dishes_two"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/view_Dishes_three"
                        style="@style/menu_item" />

                    <TextView
                        android:id="@+id/view_Dishes_four"
                        style="@style/menu_item" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/menu_content_text"
                    android:text="S" />

                <TextView
                    android:id="@+id/view_Soup"
                    style="@style/menu_item" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_end_view"
            style="@style/menu_End"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/menu_view_count"
                style="@style/menu_End_count"
                android:text="00" />

            <TextView
                android:id="@+id/view_detail"
                style="@style/menu_End_bottom"
                android:text="DETAIL" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

