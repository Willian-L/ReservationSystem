<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword.ResetVerActivity"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="@string/reset_title"
        android:textSize="36dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_ver_initem_username"
        android:paddingLeft="5dp"/>

    <EditText
        android:id="@+id/edtVerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_username"
        android:maxLength="16"
        android:maxLines="1"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_ver_initem_code"
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:gravity="bottom">

        <EditText
            android:id="@+id/edtVerCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="4"
            android:maxLines="1"
            android:gravity="center"
            android:textSize="40dp"
            android:inputType="number"
            />
        <ImageView
            android:id="@+id/imgVer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        style="@style/ButtonStytle1"
        android:layout_marginTop="15dp"
        android:id="@+id/btnVerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#80000000"
        android:text="@string/reset_btn_reset"
        android:textSize="20dp"/>

</LinearLayout>