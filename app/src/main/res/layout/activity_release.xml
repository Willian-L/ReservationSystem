<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MasterHomepage.ReleaseActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_title">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="back_Edit"/>

        <TextView
            android:id="@+id/textView"
            style="@style/release_title"
            android:text="Publish Menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/push"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_yes"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <DatePicker
        style="@style/release_date"
        android:id="@+id/push_data"
        android:layout_gravity="center"></DatePicker>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/relese_menu_layout">

                <TextView
                    style="@style/release_menu_title"
                    android:text="MENU - 1" />

                <View style="@style/release_menu_view_title" />

                <LinearLayout style="@style/release_menu_dishes_layout">

                    <TextView
                        style="@style/relese_menu_dishes_top"
                        android:text="DISHES" />

                    <View style="@style/relese_menu_dishes_view" />


                    <LinearLayout style="@style/release_menu_content_layout">

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="①" />

                            <EditText
                                android:id="@+id/edt_dish_1_1"
                                style="@style/relese_menu_content_item_edit"/>
                        </LinearLayout>


                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="②" />

                            <EditText
                                android:id="@+id/edt_dish_1_2"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="③" />

                            <EditText
                                android:id="@+id/edt_dish_1_3"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="④" />

                            <EditText
                                android:id="@+id/edt_dish_1_4"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout style="@style/release_menu_soup_layout">

                    <TextView
                        style="@style/relese_menu_dishes_top"
                        android:text="SOUP" />

                    <View style="@style/relese_menu_dishes_view" />

                    <LinearLayout style="@style/relese_menu_soup_content_layout">

                        <EditText
                            android:id="@+id/edt_soup_1"
                            style="@style/relese_menu_content_item_edit" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Re_menu_two"
                style="@style/relese_menu_layout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    style="@style/release_menu_title"
                    android:text="MENU - 2" />

                <View style="@style/release_menu_view_title" />

                <LinearLayout style="@style/release_menu_dishes_layout">

                    <TextView
                        style="@style/relese_menu_dishes_top"
                        android:text="DISHES" />

                    <View style="@style/relese_menu_dishes_view" />


                    <LinearLayout style="@style/release_menu_content_layout">

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="①" />

                            <EditText
                                android:id="@+id/edt_dish_2_1"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>


                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="②" />

                            <EditText
                                android:id="@+id/edt_dish_2_2"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="③" />

                            <EditText
                                android:id="@+id/edt_dish_2_3"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>

                        <LinearLayout style="@style/relese_menu_content_item">

                            <TextView
                                style="@style/relese_menu_content_item_text"
                                android:text="④" />

                            <EditText
                                android:id="@+id/edt_dish_2_4"
                                style="@style/relese_menu_content_item_edit" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout style="@style/release_menu_soup_layout">

                    <TextView
                        style="@style/relese_menu_dishes_top"
                        android:text="SOUP" />

                    <View style="@style/relese_menu_dishes_view" />

                    <LinearLayout style="@style/relese_menu_soup_content_layout">

                        <EditText
                            android:id="@+id/edt_soup_2"
                            style="@style/relese_menu_content_item_edit" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/add_menu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/ic_add_menu"
                android:onClick="newMenu"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>