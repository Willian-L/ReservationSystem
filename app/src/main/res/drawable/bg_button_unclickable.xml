<?xml version ="1.0" encoding ="utf-8"?><!--  Learn More about how to use com.william.reservationsystem.controller.App Actions: https://developer.android.com/guide/actions/index.html -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <!--点击效果-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 半透明圆角按钮 -->
            <solid android:color="#c0c0c0"/>
            <corners android:radius="12dip"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <!--未点击效果-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!-- 透明圆角按钮 -->
            <gradient
                android:startColor="#e0f5f5f5"
                android:endColor="#e0f0f0f0"
                android:angle="270"/>
            <corners android:radius="12dip"/>
        </shape>
    </item>
</selector>