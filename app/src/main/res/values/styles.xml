<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/radiu_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Edit_input">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Edit_show">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Edit_My" parent="Edit_show">
        <item name="android:enabled">false</item>
    </style>

    <style name="LinerLayout_my_show">
        <item name="android:layout_height">312dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">6</item>
    </style>

    <style name="Fragment_rel_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#20000000</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Fragment_txt_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#efffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinerLayout_register_item">
        <item name="android:layout_height">162dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="Login_editText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Login_radBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B0000000</item>
    </style>

    <style name="Login_underBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="my_imgBtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_toRightOf">@id/userImg_photo</item>
        <item name="android:background">#0fffffff</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="My_ButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="my_radBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="Popup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#3fffffff</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#af000000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="menu_End">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="menu_End_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menu_End_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8fffffff</item>
    </style>

    <style name="menu_End_countTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8fffffff</item>
    </style>

    <style name="menu_End_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8fffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>