<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#7bbbbbbb</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/radiu_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Edit_input">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Edit_show">
        <item name="android:background">@null</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Edit_My" parent="Edit_show">
        <item name="android:enabled">false</item>
    </style>

    <style name="LinerLayout_my_show">
        <item name="android:layout_height">312dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">6</item>
    </style>

    <style name="Fragment_rel_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_title</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Fragment_txt_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinerLayout_register_item">
        <item name="android:layout_height">162dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="Login_editText">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="Login_radBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B0000000</item>
    </style>

    <style name="Login_underBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="my_imgBtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_toRightOf">@id/userImg_photo</item>
        <item name="android:background">#0fffffff</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="My_ButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="my_radBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="Popup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="menu_End">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="menu_End_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menu_End_count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">55dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="menu_End_countTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="menu_End_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_text_to_button</item>
    </style>

    <style name="release_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="relese_menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_re_menu</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="order_menu_layout" parent="relese_menu_layout">
        <item name="android:background">#80e6e6e6</item>
    </style>

    <style name="release_menu_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="release_menu_view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#31808080</item>
    </style>

    <style name="order_menu_view_title" parent="release_menu_view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="release_menu_dishes_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="relese_menu_dishes_top">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="relese_menu_dishes_view">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#1f808080</item>
    </style>

    <style name="release_menu_content_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="relese_menu_content_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="relese_menu_content_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="relese_menu_content_item_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#af000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="release_menu_soup_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="relese_menu_soup_content_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">165dp</item>
        <item name="android:background">#50888888</item>
    </style>

    <style name="view_show_menu">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="menu_content_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="menu_content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>